@page "/admin/stats"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Http
@inject IAdminAccessService AdminAccessService
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>Statistics - Admin</PageTitle>

@if (!AdminAccessService.IsAdmin())
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="alert alert-warning" role="alert">
                    <h3 class="alert-heading">Not Found</h3>
                    <p>You do not have access to this page.</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid py-4">
        <div class="row mb-4">
            <div class="col">
                <h1>Statistics Dashboard</h1>
                <p class="text-muted">Analytics and insights for your application</p>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <SearchTrendsChart />
            </div>
        </div>
    </div>
}

@code {
    protected override void OnInitialized()
    {
        if (!AdminAccessService.IsAdmin())
        {
            HttpContextAccessor.HttpContext?.Response.StatusCode = StatusCodes.Status404NotFound;
        }
    }
}
