@page "/forgot-password"
@rendermode InteractiveServer

<PageTitle>Forgot Password</PageTitle>

@if (_isEmailFeatureDisabled)
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4 text-center">
                <div class="alert alert-warning" role="alert">
                    <h3 class="alert-heading">Not Found</h3>
                    <p>The password reset workflow is unavailable.</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4">Forgot Password</h3>

                        @if (!_emailSent)
                        {
                            <EditForm Model="@_model" OnValidSubmit="HandleSubmit">
                                <DataAnnotationsValidator />

                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address</label>
                                    <InputText id="email" @bind-Value="_model.Email" class="form-control" placeholder="Enter your email" />
                                    <ValidationMessage For="@(() => _model.Email)" class="text-danger" />
                                </div>

                                @if (!string.IsNullOrEmpty(_errorMessage))
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @_errorMessage
                                    </div>
                                }

                                <button type="submit" class="btn btn-primary w-100" disabled="@_isSubmitting">
                                    @if (_isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    }
                                    Send Reset Link
                                </button>
                            </EditForm>

                            <div class="text-center mt-3">
                                <a href="/login" class="text-decoration-none">Back to Login</a>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success" role="alert">
                                <h5 class="alert-heading">Check Your Email</h5>
                                <p>If an account exists with that email address, we've sent you a password reset link.</p>
                                <p class="mb-0">The link will expire in 24 hours.</p>
                            </div>
                            <div class="text-center mt-3">
                                <a href="/login" class="btn btn-outline-primary">Return to Login</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
