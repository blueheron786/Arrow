@page "/contact"
@rendermode InteractiveServer
@inject IEmailService EmailService
@inject IConfiguration Configuration

<PageTitle>Contact Us</PageTitle>

<div class="container mt-4">
    <h1>Contact Us</h1>
    <p>We'd love to hear from you! Please share your feedback, suggestions, or report any issues.</p>

    @if (!IsFeedbackAvailable)
    {
        <div class="alert alert-warning" role="alert">
            @DisabledFeedbackMessage
        </div>
    }
    else
    {
        if (!string.IsNullOrEmpty(statusMessage))
        {
            <div class="alert @(isSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                @statusMessage
                <button type="button" class="btn-close" @onclick="ClearStatus"></button>
            </div>
        }

        <div class="card">
            <div class="card-body">
                <EditForm Model="@feedbackModel" OnValidSubmit="SubmitFeedback" FormName="feedbackForm">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />

                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <InputText id="name" class="form-control" @bind-Value="feedbackModel.Name" />
                        <ValidationMessage For="@(() => feedbackModel.Name)" />
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <InputText id="email" type="email" class="form-control" @bind-Value="feedbackModel.Email" />
                        <ValidationMessage For="@(() => feedbackModel.Email)" />
                    </div>

                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <InputTextArea id="message" class="form-control" rows="6" @bind-Value="feedbackModel.Message" />
                        <ValidationMessage For="@(() => feedbackModel.Message)" />
                    </div>

                    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Sending...</span>
                        }
                        else
                        {
                            <span>Submit Feedback</span>
                        }
                    </button>
                </EditForm>
            </div>
        </div>
    }
</div>

@code {
    private FeedbackModel feedbackModel = new();
    private bool isSubmitting = false;
    private string? statusMessage;
    private bool isSuccess = false;
    private bool IsFeedbackAvailable => FeatureToggles.IsFeedbackEnabled;
    private string DisabledFeedbackMessage => "Feedback submissions are currently disabled.";

    private async Task SubmitFeedback()
    {
        try
        {
            if (!IsFeedbackAvailable)
            {
                statusMessage = DisabledFeedbackMessage;
                isSuccess = false;
                return;
            }

            isSubmitting = true;
            statusMessage = null;

            var adminEmail = Configuration["AdminEmailAddress"];
            if (string.IsNullOrEmpty(adminEmail))
            {
                statusMessage = "Admin email address is not configured.";
                isSuccess = false;
                return;
            }

            var subject = $"Feedback from {feedbackModel.Name}";
            var body = $@"<h2>New Feedback Received</h2>
<p><strong>From:</strong> {feedbackModel.Name} ({feedbackModel.Email})</p>
<hr />
<p><strong>Message:</strong></p>
<p>{feedbackModel.Message.Replace("\n", "<br />")}</p>";

            await EmailService.SendGenericEmailAsync(adminEmail, subject, body);

            statusMessage = "Thank you for your feedback! We'll review it shortly.";
            isSuccess = true;
            feedbackModel = new(); // Reset form
        }
        catch (Exception ex)
        {
            statusMessage = $"Failed to send feedback: {ex.Message}";
            isSuccess = false;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void ClearStatus()
    {
        statusMessage = null;
    }

    public class FeedbackModel
    {
        [Required(ErrorMessage = "Name is required")]
        [StringLength(100, ErrorMessage = "Name cannot exceed 100 characters")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Message is required")]
        [StringLength(2000, ErrorMessage = "Message cannot exceed 2000 characters")]
        public string Message { get; set; } = string.Empty;
    }
}
